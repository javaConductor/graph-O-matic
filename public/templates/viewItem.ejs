
<div ng-cloak  draggable='true'
	 class="draggable viewItem"
	 style="position: absolute;z-index:1;"	>

	<div id='connector_1' class='connector' style="position: absolute;top:0px;left:185px;width: 30px;height: 30px;" >
		<svg xmlns="http://www.w3.org/2000/svg" version="1.1">
			<defs>
				<radialGradient id="grad1" cx="50%" cy="50%" r="50%" fx="50%" fy="50%">
					<stop offset="0%" style="stop-color:goldenrod;stop-opacity:0" />
					<stop offset="100%" style="stop-color:black;stop-opacity:1" />
				</radialGradient>
			</defs>
			<circle cx="15" cy="15" r="10" fill="url(#grad1)" style="stroke:black;stroke-width:2" />
		</svg>
	</div>

	<div class="summary">
		<svg xmlns="http://www.w3.org/2000/svg" xlink="http://www.w3.org/1999/xlink">
			<g>
				<foreignObject class="node" x="20" y="30" width="100%" height="300">
					<label id='title'>{{viewItem.title()}}</label>
				</foreignObject>
				<image x="20" y="50" width="160" height="80"
					   xlink:href="{{viewItem.image()}}">
				</image>
			</g>
		</svg>
	</div>

	<div class="details">
		<table class="detailTable">
			<thead>
			<tr>
				<th class="detailHeader" colspan="2">Details</th>
			</tr>
			</thead>
		</table>
		<div style="border-style: groove; overflow: auto;height: 140px;" >
			<table class="detailBody" >
				<tbody>
				<tr
						ng-repeat='row in viewItem.data()'>
					<td width='50%' class="detailName">{{row.name}}</td>
					<td class="detailValue">{{row.value}}</td>
				</tr>
				</tbody>
			</table>
		</div>
	</div>

	<div id='connector_2' class='connector' style="z-index:30;position: absolute;top:220px;left:185px;width: 30px;height: 30px;" >
		<svg xmlns="http://www.w3.org/2000/svg" version="1.1">
			<defs>
				<radialGradient id="grad2" cx="50%" cy="50%" r="50%" fx="50%" fy="50%">
					<stop offset="0%" style="stop-color:goldenrod;stop-opacity:0" />
					<stop offset="100%" style="stop-color:black;stop-opacity:1" />
				</radialGradient>
			</defs>
			<circle cx="15" cy="15" r="10" fill="url(#grad2)" style="stroke:black;stroke-width:2" />
		</svg>
	</div>

</div>
